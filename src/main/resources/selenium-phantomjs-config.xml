<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="systemPrereqs"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" value="#{@systemProperties}" />
		<property name="targetMethod" value="putAll" />
		<property name="arguments">
			<util:properties>
				<prop key="phantomjs.binary.path">phantomjs-2.1.1-windows/bin/phantomjs.exe</prop>
			</util:properties>
		</property>
	</bean>

	<util:map id="capabilitiesMap" map-class="java.util.HashMap">
		<!-- <entry key="browserName" value="internet explorer" /> -->
		<!-- <entry key="platform" value="WINDOWS" /> -->
		<!-- <entry key="version" value="7" /> -->
		<!-- <entry key="javascriptEnabled" value="true" /> -->
		<!-- <entry key="handlesAlerts" value="true" /> -->
		<!-- <entry key="ignoreProtectedModeSettings" value="true" /> -->
		<!-- <entry key="ie.ensureCleanSession" value="true" /> -->
		<entry key="logLevel" value="ERROR" />
		<!-- <entry -->
		<!-- key="org.openqa.selenium.ie.InternetExplorerDriver.INTRODUCE_FLAKINESS_BY_IGNORING_SECURITY_DOMAINS" -->
		<!-- value="true" /> -->
	</util:map>

	<bean id="phantomCapabilities" class="org.openqa.selenium.remote.DesiredCapabilities">
		<constructor-arg ref="capabilitiesMap" />
	</bean>

	<bean id="phantomJavascriptEnabledCapabilitySetter"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="phantomCapabilities" />
		<property name="targetMethod" value="setJavascriptEnabled" />
		<property name="arguments">
			<value>true</value>
		</property>
	</bean>

	<bean id="phantomTakesScreenshotCapabilitySetter"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="phantomCapabilities" />
		<property name="targetMethod" value="setCapability" />
		<property name="arguments">
			<list>
				<value>"takesScreenshot"</value>
				<value>true</value>
			</list>
		</property>
	</bean>

	<bean id="phantomHandlesAlertsCapabilitySetter"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="phantomCapabilities" />
		<property name="targetMethod" value="setCapability" />
		<property name="arguments">
			<list>
				<value>"handlesAlerts"</value>
				<value>true</value>
			</list>
		</property>
	</bean>

	<bean id="driver" class="org.openqa.selenium.phantomjs.PhantomJSDriver"
		destroy-method="quit" lazy-init="true">
		<constructor-arg name="desiredCapabilities" ref="phantomCapabilities" />
	</bean>
</beans>